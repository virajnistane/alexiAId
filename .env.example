# ============================================
# ToughTongue AI Next.js Starter - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# Command: cp .env.example .env.local
# ============================================

# ============================================
# REQUIRED: ToughTongue AI Configuration
# ============================================
# Get your API key from: https://app.toughtongueai.com/developer?tab=api-keys

TOUGH_TONGUE_API_KEY=your_api_key_here


# ============================================
# DEVELOPMENT MODE
# ============================================
# Set to "true" to enable the admin panel
# IMPORTANT: Set to "false" or remove in production!

NEXT_PUBLIC_IS_DEV=true


# ============================================
# ADMIN CONFIGURATION
# ============================================
# Admin token for accessing /admin page (only works when NEXT_PUBLIC_IS_DEV=true)
# Default: TTAI-STARTER-ADMIN-TOKEN

ADMIN_TOKEN=TTAI-STARTER-ADMIN-TOKEN


# ============================================
# OPTIONAL: Firebase Configuration
# ============================================
# Used for Google OAuth authentication
# Get these from: https://console.firebase.google.com/
# Go to: Project Settings > General > Your apps > Web app
# Note: Local user auth works without Firebase

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id


# ============================================
# NOTES
# ============================================
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Never commit .env.local to git (it's in .gitignore)
# - Restart dev server after changing environment variables: pnpm dev
# ============================================
